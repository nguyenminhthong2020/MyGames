<Window x:Class="ChessApp.Views.PromotionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MyGames.Desktop.Controls"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Chọn quân phong cấp"
        SizeToContent="WidthAndHeight"
        Background="#EEE"
        ShowInTaskbar="False">

    <StackPanel x:Name="ButtonPanel"
                Orientation="Vertical"
                Margin="15">
        <TextBlock Text="Chọn quân bạn muốn phong:" FontWeight="Bold" Margin="0,0,0,10" />
        <StackPanel x:Name="InnerButtonPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Width="60"
                    Height="60"
                    Margin="5"
                    Tag="q"
                    Click="OnPieceClick">
                <controls:SvgSkiaView Width="60"
                                   Height="60"
                                   Stretch="Uniform" />
            </Button>
            <Button Width="60"
                    Height="60"
                    Margin="5"
                    Tag="r"
                    Click="OnPieceClick">
                <controls:SvgSkiaView Width="60"
                                   Height="60"
                                   Stretch="Uniform" />
            </Button>
            <Button Width="60"
                    Height="60"
                    Margin="5"
                    Tag="b"
                    Click="OnPieceClick">
                <controls:SvgSkiaView Width="60"
                                   Height="60"
                                   Stretch="Uniform" />
            </Button>
            <Button Width="60"
                    Height="60"
                    Margin="5"
                    Tag="n"
                    Click="OnPieceClick">
                <controls:SvgSkiaView Width="60"
                                   Height="60"
                                   Stretch="Uniform" />
            </Button>
        </StackPanel>

    </StackPanel>
</Window>
