<Window x:Class="MyGames.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MyGames.Desktop.Controls"
        mc:Ignorable="d"
        Title="MyGames Desktop"
        Icon="/Resources/app.ico"
        Height="720"
        Width="1000"
        Background="#FFF9F9F9"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <DockPanel>
            <!-- Header: chọn màu người chơi -->
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Bạn là:"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0" />
                <ComboBox x:Name="PlayerColorOptions"
                          Width="100"
                          SelectedIndex="{Binding SelectedColorIndex}"
                          ItemsSource="{Binding PlayerColorOptions}" />
                <!--<TextBlock Text="{Binding PlayerColorText}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center" />-->
                <CheckBox Content="AutoPlay"
                          IsChecked="{Binding IsAutoPlayEnabled}"
                          VerticalAlignment="Center"
                          Margin="8,0,0,0" />
                <CheckBox Content="OppAutoPlay"
                          IsChecked="{Binding IsOpponentAutoPlayEnabled}"
                          VerticalAlignment="Center"
                          Margin="8,0,0,0" />
            </StackPanel>
            <Border CornerRadius="0"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="0"
                    Background="White"
                    Margin="0">
                <controls:ChessBoardControl x:Name="ChessBoard"
                                            IsBlackPlayer="{Binding IsBlackPlayer}" />
            </Border>
        </DockPanel>
        <!-- ==== CỘT PHẢI: THÔNG TIN GAME ==== -->
        <StackPanel Grid.Column="1"
                    Margin="18,0,0,0">
            <TextBlock Text="Trạng thái:"
                       FontWeight="Bold"
                       FontSize="16" />
            <controls:StatusTextBlock x:Name="StatusMessage"
                                      StatusMessage="{Binding StatusMessage}"
                                      Margin="0,5,0,10"
                                      FontSize="14"
                                      FontWeight="Bold" />
            <!-- thay thế phần "Danh sách nước đi:" block cũ bằng block sau -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0">
                <TextBlock Text="Nước đi"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,10,0" />
                <TextBlock Text="{Binding WhiteAccuracy, StringFormat={}{0:F1}%}"
                           Margin="10,0"
                           FontSize="16" />
                <TextBlock Text="{Binding BlackAccuracy, StringFormat={}{0:F1}%}"
                           Margin="10,0"
                           FontSize="16" />
            </StackPanel>
            <!-- ListView hiển thị 3 cột: # | White | Black -->
            <ListView x:Name="MoveListView"
                      ItemsSource="{Binding MoveEntries}"
                      Height="200"
                      Margin="0,5,0,20"
                      AlternationCount="2"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding"
                                Value="4,2" />
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex"
                                     Value="0">
                                <Setter Property="Background"
                                        Value="#FFFFFFFF" />
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex"
                                     Value="1">
                                <Setter Property="Background"
                                        Value="#FFF6F8FA" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#"
                                        Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="White"
                                        Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding White}"
                                               Foreground="DarkBlue"
                                               FontFamily="Consolas" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Black"
                                        Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Black}"
                                               Foreground="DarkRed"
                                               FontFamily="Consolas" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <Button Content="Ván mới"
                        Command="{Binding ResetGameCommand}"
                        Padding="10,5"
                        Width="80"
                        HorizontalAlignment="Left" 
                        Cursor="Hand"/>
                <Button Content="Phân tích"
                        Command="{Binding AnalyzeCommand}"
                        Padding="10,5"
                        Width="80"
                        Margin="10,0,0,0"
                        Cursor="Hand" />
                <CheckBox Content="Sound"
                          IsChecked="{Binding IsSoundEnabled}"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0" />
            </StackPanel>
            <TextBlock Text="Nước gợi ý tiếp theo:"
                       FontWeight="Bold"
                       FontSize="16" />
            <TextBlock Text="{Binding RecommendedMove}"
                       Foreground="DarkGreen"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,5,0,5" />
            <TextBlock Text="Logs:"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,10,0,5" />
            <ListBox ItemsSource="{Binding LogLines}"
                     Height="200"
                     Background="#111"
                     Foreground="LightGreen"
                     FontFamily="Consolas"
                     FontSize="12"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </Grid>
</Window>
