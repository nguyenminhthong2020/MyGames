<Window x:Class="MyGames.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MyGames.Desktop.Controls"
        mc:Ignorable="d"
        Title="MyGames Desktop"
        Height="720"
        Width="1000"
        SizeToContent="WidthAndHeight"
        MinWidth="700"
        MinHeight="504"
        Background="#FFF9F9F9"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- ==== CỘT TRÁI: BÀN CỜ ==== -->
        <Border CornerRadius="10"
                BorderBrush="#DDD"
                BorderThickness="1"
                Padding="10"
                Background="White"
                Margin="10">
            <controls:ChessBoardControl x:Name="ChessBoard" />
        </Border>

        <!-- ==== CỘT PHẢI: THÔNG TIN GAME ==== -->
        <StackPanel Grid.Column="1"
                    Margin="20,0,0,0">
            <TextBlock Text="Trạng thái:"
                       FontWeight="Bold"
                       FontSize="16" />
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="0,5,0,20"
                       FontSize="14" />

            <TextBlock Text="Loại quân của bạn:"
                       FontWeight="Bold"
                       FontSize="16" />
            <TextBlock Text="{Binding PlayerColorText}"
                       Margin="0,5,0,20"
                       FontSize="14" />

            <TextBlock Text="Danh sách nước đi:"
                       FontWeight="Bold"
                       FontSize="16" />
            <ListBox ItemsSource="{Binding MoveHistory}"
                     Height="200"
                     Margin="0,10,0,20" />

            <!--<TextBlock Text="Nước gợi ý tiếp theo:"
                       FontWeight="Bold"
                       FontSize="16" />
            <TextBlock Text="{Binding RecommendedMove}"
                       Foreground="DarkGreen"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,5,0,20" />

            <Button Content="Khởi động lại ván mới"
                    Command="{Binding ResetGameCommand}"
                    Padding="10,5"
                    Width="180"
                    HorizontalAlignment="Left" />-->

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <Button Content="Khởi động lại ván mới"
                        Command="{Binding ResetGameCommand}"
                        Padding="10,5"
                        Width="140"
                        HorizontalAlignment="Left" />
                <Button Content="Phân tích"
                        Command="{Binding AnalyzeCommand}"
                        Padding="10,5"
                        Width="100"
                        Margin="10,0,0,0" />
            </StackPanel>

            <TextBlock Text="Nước gợi ý tiếp theo:"
                       FontWeight="Bold"
                       FontSize="16" />
            <TextBlock Text="{Binding RecommendedMove}"
                       Foreground="DarkGreen"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,5,0,5" />

            <TextBlock Text="Logs:"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,10,0,5" />
            <ListBox ItemsSource="{Binding LogLines}"
                     Height="150"
                     Background="#111"
                     Foreground="LightGreen"
                     FontFamily="Consolas"
                     FontSize="12"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" />

        </StackPanel>
    </Grid>
</Window>
